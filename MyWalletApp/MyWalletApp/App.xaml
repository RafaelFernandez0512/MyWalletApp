<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication  xmlns:prism="http://prismlibrary.com" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                         xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
                         xmlns:styles="clr-namespace:MyWalletApp.Styles"
               x:Class="MyWalletApp.App">
    <prism:PrismApplication.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <styles:ColorDark/>
                    <styles:Colors/>
                </ResourceDictionary.MergedDictionaries>
                <Style TargetType="yummy:PancakeView" x:Key="ButtonPayNow">
                    <Setter  Property="Margin" Value="20"/>
                    <Setter  Property="Padding" Value="5"/>
                    <Setter  Property="CornerRadius" Value="{OnPlatform Android=38,iOS=28}"/>
                    <Setter Property="BackgroundColor" Value="#5E29F2" />
                    <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
                </Style>
            </ResourceDictionary>
        </prism:PrismApplication.Resources>
    </prism:PrismApplication>